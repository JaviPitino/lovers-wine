    </svg></a>
</div>
<br />
<div class="formulario-editar">
  <form
    class="form-edit"
    action="/wines/{{vinoActua._id}}/upload"
    method="POST"
    enctype="multipart/form-data">

    <label for="nombre"><strong> Nombre: &nbsp; </strong></label>
    <input type="text" name="nombre" value="{{vinoActua.nombre}}" />
    <br />
    <br />
    <label for="tipoVino"><strong> Tipo de Vino: &nbsp; </strong></label>
    <select name="tipoVino">
      <option value="{{vinoActua.tipoVino}}">{{vinoActua.tipoVino}}</option>
      <option disabled="true">__________</option>
      {{#each tipoVino}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <br />
    <label for="anada"><strong> A침ada: &nbsp; </strong></label>
    <select name="anada">
      <option value="{{vinoActua.anada}}">{{vinoActua.anada}}</option>
      <option disabled="true">__________</option>
      {{#each anada}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <br />
    <label for="ano"><strong> A침o: &nbsp; </strong></label>
    <input type="text" name="ano" value="{{vinoActua.ano}}" />
    <br />
    <br />
    <label for="denOrigen"><strong>
        Denominaci칩n de Origen: &nbsp;
      </strong></label>
    <select name="denOrigen">
      <option value="{{vinoActua.denOrigen}}">{{vinoActua.denOrigen}}</option>
      <option disabled="true">__________</option>
      {{#each denOrigen}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <br />
    <label for="puntuacion"><strong> Puntuaci칩n: &nbsp; </strong></label>
    <select name="puntuacion">
      <option value="{{vinoActua.puntuacion}}">{{vinoActua.puntuacion}}</option>
      <option disabled="true">__________</option>
      {{#each puntuacion}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <br />
    <label for="maridaje"> <strong> Maridaje: &nbsp; </strong></label>
    <select name="maridaje" multiple="true">
      <option value="{{vinoActua.maridaje}}">{{vinoActua.maridaje}}</option>
      <option disabled="true">__________</option>
      {{#each maridaje}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
    <br />
    <br />

    <label for="image"> <strong> Imagen: &nbsp; </strong></label>
    <input type="file" name="image" />

    <img src="{{vinoActua.vinoPicture}}" alt="fotoVino" width="50px" />
    <br />
    <br />
    <button class="addvino" type="submit">Actualizar Vino</button>

  </form>
</div>